                    <path d="M2.77783 1.66663H10.5556" stroke="#E31F25"/>
                    <path d="M2.77783 8.33337H10.5556" stroke="#E31F25"/>
                    <path d="M7.77783 5H5.42402e-05" stroke="#E31F25"/>
                </svg>
                span фільтр
        .sort-select.item-center.d-flex.select-count
            p кількість товарів:
            form(action="#" method="post")#countForm
                label.arrow-select
                    .select
                        input(type='hidden').select__input
                        .select__in 16
                        .select__list
                            .select__item(data-value='1') 16
                            .select__item(data-value='2') 24
                            .select__item(data-value='3') 36
                            .select__item(data-value='4') 48
        .view-catalog-card.d-flex.item-center
            p.text-select вигляд:
            p.box
                a(href="#").active-btn-card 
                    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
                        <rect x="0.5" y="0.5" width="3" height="3" stroke="#D9D9D9"/>
                        <rect x="6.5" y="0.5" width="3" height="3" stroke="#D9D9D9"/>
                        <rect x="0.5" y="6.5" width="3" height="3" stroke="#D9D9D9"/>
                        <rect x="6.5" y="6.5" width="3" height="3" stroke="#D9D9D9"/>
                    </svg>
            p.line
                a(href="#")
                    <svg xmlns="http://www.w3.org/2000/svg" width="12" height="9" viewBox="0 0 12 9" fill="none">
                        <rect width="12" height="1" fill="#D9D9D9"/>
                        <rect y="4" width="12" height="1" fill="#D9D9D9"/>
                        <rect y="8" width="12" height="1" fill="#D9D9D9"/>
                    </svg> 

        .sort-select.item-center.d-flex.popularity-select
            p.text-select сортувати:
            form(action="#" method="post")#sortForm
                label.arrow-select
                    .select
                        input(type='hidden').select__input
                        .select__in 
                            span.text-select найпопулярніші
                            span.icon-select 
