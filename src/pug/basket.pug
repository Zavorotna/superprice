doctype html
html(lang="uk")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, maximum-scale=2.0")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
        link(rel="stylesheet" href="css/style.css")
        title Дешевше - інтернет магазин необхідних товарів для всієї родини
    body#body
        header
            .fixed-header
                include components/header
        main.wrapper
            .d-flex.flex-arrow
                a(href="#body").arrow-up.arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="none">
                        <path d="M1 9L9 0.999999L17 9" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                a(href="#footer").arrow-down.arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="none">
                        <path d="M1 0.999999L9 9L17 1" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
            p.page-look.d-flex
                a(href="index.html") головна
                span /
                span.selected-page кошик
            h1.page-h1 кошик
            .grid.basket-grid
                .basket-main 
                    - for(let i = 0; i < 4; i++)
                        include components/basket-card
                .form-comment.form-basket
                    form(action="#")
                        h2.head-comment-form ваше замовлення
                        .form-to-add_comment
                            .flex-between
                                p
                                    label(for="promo") Промокод 
                                    input#promo(type="text" name="promo")
                                input(type="radio").promo-basket
                            .flex-between
                                p
                                    label(for="sertyficat") Сертифікат на знижку
                                    input#sertyficat(type="text" name="sertyficat") 
                                input(type="radio").promo-basket
                        .sum-basket.flex-between.item-center
                            p.text-sum Знижка
                            p.sum 0 грн
                        .sum-basket.flex-between.item-center
                            p.text-sum До сплати
                            p.sum 890 грн
                        //- a(href="order.html").btn-card.yellow-cta оформити замовлення
                        .d-flex.flex-btn
                            button(type="submit").btn-card.cta.cta-card.d-flex.item-center оформити замовлення
                            a(href="#").basket-cta назад до каталогу
            section.view-product.top-prodaz-main
                h2 вам може сподобатись
                include components/card-sliderPageBasket

        footer#footer
            include components/footer

        script(src="js/scripts.js")
